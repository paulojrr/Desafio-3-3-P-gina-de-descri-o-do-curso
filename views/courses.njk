{% extends 'layout.njk' %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <main>
        <div class="cards__container">
            
            {% for card in cards %}
                <div class="card box_size" id="{{card.id}}">
                    <div class="card__logo">
                        <img src="{{card.logo}}" alt="card__logo">
                    </div>

                    <div class="card__title">
                        <h2>{{card.title}}</h2>
                    </div>

                    <div class="card__modules">
                        <p>{{card.modul}}</p>
                    </div>

                    <div class="card__payment">
                        <p>{{card.payment}}</p>
                    </div>
                </div>
            {% endfor %}

            <div class="modal-overlay">
                <div class="modal">
                    <a class="modal-close">
                        <i class="material-icons">close</i>
                    </a>

                    <a class="modal-maximize">
                        <span class="material-icons">
                            crop_3_2
                        </span>
                    </a>
                     <div class="modal-content">
                        <iframe src="https://rocketseat.com.br/"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="scripts.js"></script>
{% endblock %}