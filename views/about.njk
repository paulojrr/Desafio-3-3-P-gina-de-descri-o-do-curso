{% extends 'layout.njk' %}

{% block content %}
    <main>
        <div class="main__content">
            <div class="main__content--logo">
                <img src="{{about.logo}}" alt="image logo">
            </div>

            <div class="main__content--title">
                <h1>{{about.title}}</h1>
            </div>

            <div class="main__content--description">
              <p>{{about.description}}</p>   
            </div>

            <div class="main__content--technologies">
                <ul>
                    {% for tec in about.technologies  %}
                         <li>{{tec.name}}</li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="main__content--links">
                {% for link in about.links %}
                    <a href="/">{{link.name}}</a>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}